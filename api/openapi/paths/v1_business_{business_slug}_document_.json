{
  "get": {
    "operationId": "Documents - List",
    "description": "This endpoints allows you to retrieve a list of all the company's documents and create new ones. It includes extensive filtering options and a search feature",
    "summary": "Documents - List",
    "parameters": [
      {
        "in": "query",
        "name": "account",
        "schema": {
          "type": "number"
        },
        "description": "Filter documents by account ID."
      },
      {
        "in": "path",
        "name": "business_slug",
        "schema": {
          "type": "string"
        },
        "required": true
      },
      {
