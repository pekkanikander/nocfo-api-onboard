        "name": "contact",
        "schema": {
          "type": "number"
        },
        "description": "Filter documents by contact ID."
      },
      {
        "in": "query",
        "name": "date_from",
        "schema": {
          "type": "string",
          "format": "date"
        },
        "description": "Filter documents from this date onwards. Date is inclusive."
      },
      {
        "in": "query",
        "name": "date_to",
        "schema": {
          "type": "string",
          "format": "date"
        },
        "description": "Filter documents up to this date. Date is inclusive."
      },
      {
        "in": "query",
        "name": "expense",
